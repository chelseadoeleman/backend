<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../css/style.css">
    <title>Fidelis</title>
</head>
<body>
    <% if(name) { %>
        <header>
            <h1>Fidelis</h1>
            <a href="/user"><%= name %></a>
        </header>
    <% } %>
    <main class="matches">
        <% if(data) { %>
            <% data.forEach(function (match) { %>
                <ul class="matches-wrapper">
                    <li class="match">
                        <div class="image-wrapper">
                            <img src="" alt="">
                            <div class="main-info">
                                <h2><%= match.name %></h2>
                                <h2><%= match.age %></h2>
                            </div>
                        </div>
                        <div class="content-wrapper">
                            <h3><%= match.favorite_movie %></h3>
                            <% if (match.movies) { %>
                                <h4>Last seen</h4>
                                <ol class="movie-wrapper">
                                    <% match.movies.forEach(function (movie) { %>
                                        <li><%= movie %></li>
                                    <% }) %>
                                </ol>
                            <% } %>
                            <% if (match.genres) { %>
                                <h4>genres</h4>
                                <ul class="genre-wrapper">
                                    <% match.genres.forEach(function (genre) { %>
                                        <li><%= genre %></li>
                                    <% }) %>
                                </ul>
                            <% } %>
                        </div>
                    </li>
                </ul>
                <div class="button-wrapper">
                        <button type="submit" class="first-button">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0  992.182 992.182" width="40" height="40">
                                <path fill="#FFFFFF" d="M749.204 93.337c-82.4 0-155.601 40-200.101 101.5-9.699 13.5-11 31.4-3.5 46.2l20.4 40.6c7 14 6.3 30.6-2 43.9l-42.6 68.6c-9.101 14.601-9 33 .1 47.601l41.5 66.399c8.9 14.2 9.1 32.101.7 46.601l-43.7 74.6c-8.2 14-8.2 31.4 0 45.5l44.8 76.601c7.8 13.399 8.2 29.899 1 43.6l-51.8 99c14.4 7.3 31.8 6.3 45.4-3.1 42.399-29.5 133.199-92.9 133.199-92.9 76.7-54.9 149.9-114.9 207-190.7 49.101-65.2 85-142.399 91.601-223.8 11.801-148.001-84.099-290.202-241.999-290.202zM300.303 797.938s91.4 63.5 134.101 93c1.699 1.1 3.399 2.199 5.1 3.1l51.8-99c7.201-13.7 6.8-30.2-1-43.6l-44.8-76.601c-8.2-14-8.2-31.399 0-45.5l43.7-74.6c8.5-14.4 8.2-32.4-.7-46.601l-41.5-66.399c-9.1-14.601-9.1-33-.1-47.601l42.6-68.6c8.3-13.3 9-29.9 2-43.9-20.7-41.2-39.1-82.4-72.1-115.4-28.801-28.8-64.601-50.3-103.5-62.2-23.5-7.1-48-10.7-72.601-10.7-157.8 0-254.3 142.2-242.3 290.1 6.6 81.399 42.2 158.6 91.3 223.8 57.2 75.901 131.301 135.901 208 190.702z"/>
                            </svg> 
                        </button>
                        <button type="submit" class="last-button">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 51.997 51.997" width="40" height="40">
                                <path fill="#FFFFFF" d="M51.911 16.242c-.759-8.354-6.672-14.415-14.072-14.415-4.93 0-9.444 2.653-11.984 6.905-2.517-4.307-6.846-6.906-11.697-6.906C6.759 1.826.845 7.887.087 16.241c-.06.369-.306 2.311.442 5.478 1.078 4.568 3.568 8.723 7.199 12.013l18.115 16.439 18.426-16.438c3.631-3.291 6.121-7.445 7.199-12.014.748-3.166.502-5.108.443-5.477zM15.999 9.904c-4.411 0-8 3.589-8 8 0 .553-.447 1-1 1s-1-.447-1-1c0-5.514 4.486-10 10-10 .553 0 1 .447 1 1s-.448 1-1 1z"/>
                            </svg>                                           
                        </button>
                </div>
            <% }) %>
        <% } %>
    </main>
</body>
</html>